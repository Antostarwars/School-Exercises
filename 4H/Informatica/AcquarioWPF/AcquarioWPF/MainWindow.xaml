        xmlns:local="clr-namespace:AcquarioWPF"
        mc:Ignorable="d"
        Title="Antonio De Rosa 4H - Acquario WPF" Height="450" Width="800" Icon="/Images/fish-2.png">
    <Grid>
        <Canvas Margin="0,0,0,-13">
            <Canvas x:Name="CanvasAcquario" Height="434" Width="800" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Canvas.Background>
                    <ImageBrush ImageSource="/Images/background.jpg"/>
                </Canvas.Background>
            </Canvas>
            <Label x:Name="LabelContatore" Content="Pesci nell'acquario: 0" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>

        </Canvas>

    </Grid>
